            </div>

            <div class="form_line">
              <input  type="text" id="url" name="url" placeholder=" Picture URL (optional)" class="add-book-form-control">
            </div>

            <div class="form_line">
              <textarea class="add-book-form-control"  name="description" id="description" rows="100" cols="50" value="<%= @book && @book.description %>" placeholder=" Enter description about the book..."></textarea>
            </div>
             <div >
              <button class="button btn-lg btn-primary addbook">Add Book</button>
            </div>
        </form>              
      </div>



